@using IMDB.Application.IMDB.Commands.CreateActor
@model CreateActorCommand

@{
    ViewData["Title"] = "CreateActor";
}
<partial name="_Notification" />
<h1>Create Actor</h1>
<div class="row">
    <div class="col-md-4">
        <form action="/IMDB/CreateActor" method="post">
            <div class="form-group mb-3">
                <label class="control-label" for="ActorName">Actors Name</label>
                <input class="form-control" type="text" asp-for="ActorName">
                <span asp-validation-for="ActorName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="PictureUrl">Picture Url</label>
                <input class="form-control" type="text" asp-for="PictureUrl">
                <span asp-validation-for="PictureUrl" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
