@using IMDB.Application.IMDB.Queries.GetMovieByNameList
@model GetMovieByNameListQuery

@{
    ViewData["Title"] = "Search Movies";
}
<h2>Search Movies</h2>

<form asp-action="Search" method="post">
    <div class="form-group mb-3">
        <label class="control-label" for="SearchedName">Name</label>
        <input class="form-control" type="text" asp-for="SearchedName">
        @* <span asp-validation-for="SearchedName" class="text-danger"></span> *@
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>
